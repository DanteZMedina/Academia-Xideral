package com.bootcamp.week1;

public class StudentProfile {

    int id = 0;
    byte edad = 31;
    long telefono = 55248944L;
    float promedioParcial = 8.85f;
    double promedioFinal = 8.8;
    char seccion = 'c';
    boolean becado = true;
    String fullName = "Dante Medina";

    public static void main(String[] args) {
    	
        StudentProfile student = new StudentProfile();
        System.out.println("ID: " + student.id + Integer.BYTES);
        System.out.println("Nombre: " + student.fullName + " | Bytes: No fijo (String)");
        System.out.println("Promedio: " + student.promedioParcial);
        System.out.println("Promedio final: " + student.promedioFinal);
        System.out.println("Telefono: " + student.telefono);
        System.out.println("Edad: " + student.edad);
        System.out.println("Seccion: " + student.seccion);
        System.out.println("Becado? : " + student.becado);
        
    }
}